{
    "name": "Folio Inventory",
    "version": "1.0",
    "description": "Get inventory info with a click of a button",
    "manifest_version": 2,
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": [
      "storage", 
      "declarativeContent", 
      "activeTab"
    ],
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/z16.png",
        "32": "images/z32.png",
        "48": "images/z48.png",
        "128": "images/z128.png"
      }
    },
    "icons": {
      "16": "images/z16.png",
      "32": "images/z32.png",
      "48": "images/z48.png",
      "128": "images/z128.png"
    },
    "options_page": "options.html"
}
